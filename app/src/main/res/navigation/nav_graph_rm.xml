<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@+id/characterListFragment">

    <fragment
        tools:layout="@layout/fragment_character_list"
        android:id="@+id/characterListFragment"
        android:name="com.example.myappbancodados.rickandmorty.ui.character.view.CharacterListFragment"
        android:label="CharacterListFragment" >
        <action
            android:id="@+id/action_characterListFragment_to_characterDetailFragment"
            app:destination="@id/characterDetailFragment" />
    </fragment>
    <fragment
        tools:layout="@layout/fragment_episodes_list"
        android:id="@+id/episodesListFragment"
        android:name="com.example.myappbancodados.rickandmorty.ui.EpisodesListFragment"
        android:label="EpisodesListFragment" />
    <fragment
        tools:layout="@layout/fragment_locations_list"
        android:id="@+id/locationsListFragment"
        android:name="com.example.myappbancodados.rickandmorty.ui.LocationsListFragment"
        android:label="LocationsListFragment" />
    <fragment
        android:id="@+id/characterDetailFragment"
        android:name="com.example.myappbancodados.rickandmorty.ui.character.view.CharacterDetailFragment"
        android:label="CharacterDetailFragment"
        tools:layout="@layout/fragment_character_detail"/>
</navigation>